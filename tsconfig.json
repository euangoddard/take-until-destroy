{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/*.ts",
    "!./node_modules/**/*.ts"
  ]
}
